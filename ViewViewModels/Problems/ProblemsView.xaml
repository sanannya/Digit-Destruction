<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigitDestruction.ViewViewModels.Problems.ProblemsView"
             Title="ProblemsView">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="BoxView">
            <Setter Property="Margin" Value="5" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" x:Name="Addbtn" Command="{Binding MgmtCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Dreams" FontSize="25" FontAttributes="Bold,Italic" TextColor="CadetBlue" />
            </StackLayout>

            <BoxView HeightRequest="2" HorizontalOptions="FillAndExpand" BackgroundColor="Black" />
            
            

        </StackLayout>
    </ScrollView>
</ContentPage>